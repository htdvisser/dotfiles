use_go() {
  go_binary="$HOME/go/bin/go$1"
  if [[ ! -e "$go_binary" ]]; then
    echo "Go $1 is not downloaded."
    echo "Please run: go install \"golang.org/dl/go$1@latest\" && $go_binary download"
    return 1
  fi
  go_sdk="$HOME/sdk/go$1"
  if [[ ! -e "$go_sdk" ]]; then
    echo "Go $1 SDK is not installed."
    echo "Please run: $go_binary download"
    return 1
  fi
  export GOROOT="$($go_binary env GOROOT)"
  PATH_add "$GOROOT/bin"
}
