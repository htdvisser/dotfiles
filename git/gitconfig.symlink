[core]
  compression = -1
  editor = vim
  excludesfile = ~/.gitignore
  pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
  b = branch --show-current
  co = checkout
  s = status
[blame]
  showEmail = true
[branch]
  sort = -committerdate
[color]
  ui = auto
[column]
  ui = auto dense
[commit]
  cleanup = strip
  gpgSign = true
[url "https://github.com/"]
  insteadOf = git@github.com:
[url "https://gist.github.com/"]
  insteadOf = git@gist.github.com:
[url "https://gitlab.com/"]
  insteadOf = git@gitlab.com:
[diff]
  guitool = vscode
  algorithm = histogram
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[fetch]
  prune = true
  parallel = 4
[format]
  pretty = fav
[grep]
  extendRegexp = true
  lineNumber = true
[gpg]
  format = ssh
[gpg "ssh"]
  allowedSignersFile = ~/.ssh/allowed_signers
[help]
  autocorrect = 1
[http]
  cookiefile = /Users/htdvisser/.gitcookies
[http "https://gopkg.in"]
  followRedirects = true
[log]
  abbrevCommit = true
[merge]
  guitool = vscode
  conflictsyle = diff3
[mergetool "vscode"]
  cmd = code --wait $MERGED
[mergetool]
  keepBackup = false
[pretty]
  fav = "%C(yellow)%h%C(reset)\t%<(40,trunc)%s\t(%C(cyan)%an %C(dim)%ar%C(reset))%C(dim)%d"
[pull]
  ff = only
[push]
  default = upstream
[rebase]
  autoSquash = true
[rerere]
  enabled = true
  autoUpdate = true
[status]
  short = true
  branch = true
[tag]
  gpgSign = true
  sort = -v:refname
[versionsort]
  suffix = -pre
  suffix = -rc

[user]
  useConfigOnly = true
  name = Hylke Visser
[github]
  user = htdvisser
[hub]
  protocol = https

[include]
  path = ~/.gitconfig.local
[init]
  defaultBranch = main

[includeIf "gitdir:~/projects/ttn/"]
  path = ~/.gitconfig.tti
[includeIf "gitdir:~/projects/tti/"]
  path = ~/.gitconfig.tti
[includeIf "gitdir:~/projects/packetbroker/"]
  path = ~/.gitconfig.tti
