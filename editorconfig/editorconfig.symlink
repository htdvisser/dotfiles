root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.md{,.tmpl}]
trim_trailing_whitespace = false

[*.go{,.tmpl}]
indent_style = tab
indent_size = 4

[*.cue]
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4

[*.rs]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
